{
  "name": "ubers",
  "version": "1.0.0",
  "description": "Server for the Uber clone",
  "main": "index.js",
  "scripts": {
    "dev": "cd src && nodemon --exec ts-node index.ts -e ts,graphql",
    "preTypes": "gql-merge --out-file ./src/schema.graphql ./src/api/**/*.graphql",
    "types": "npm run preTypes && graphql-to-typescript ./src/schema.graphql ./src/types/graph.d.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KishoreNewton/uber_server-nodejs.git"
  },
  "keywords": [
    "uber",
    "clone",
    "uber",
    "drive"
  ],
  "author": "Kishore Newton",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/KishoreNewton/uber_server-nodejs/issues"
  },
  "homepage": "https://github.com/KishoreNewton/uber_server-nodejs#readme",
  "devDependencies": {
    "@types/cors": "^2.8.7",
    "@types/helmet": "0.0.48",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.11.8",
    "babel-runtime": "^6.26.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "bcrypt": "^5.0.0",
    "class-validator": "^0.12.2",
    "cors": "^2.8.5",
    "gql-merge": "0.0.6",
    "graphql-to-typescript": "^0.1.2",
    "graphql-tools": "^6.2.4",
    "graphql-yoga": "^1.18.3",
    "helmet": "^4.1.1",
    "merge-graphql-schemas": "^1.7.8",
    "morgan": "^1.10.0",
    "pg": "^8.4.1",
    "typeorm": "^0.2.28"
  }
}
